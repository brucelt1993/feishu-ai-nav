# ============================================
# 飞书AI导航 - 环境配置
# 复制此文件为 .env 并填写实际值
# ============================================

# 飞书应用配置
FEISHU_APP_ID=cli_xxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxxxxxxxx

# 飞书机器人事件订阅配置（可选，启用加密时需要）
FEISHU_ENCRYPT_KEY=
FEISHU_VERIFICATION_TOKEN=

# 数据库配置
# 本地开发用 SQLite:
# DATABASE_URL=sqlite:///./ai_nav.db
# Docker 部署用 PostgreSQL (host.docker.internal 指向宿主机):
DATABASE_URL=postgresql://user:password@host.docker.internal:5432/ai_nav

# 管理员配置（open_id 列表，逗号分隔）
ADMIN_OPEN_IDS=ou_xxxxxx,ou_yyyyyy

# 统计推送配置
PUSH_CHAT_ID=oc_xxxxxxxx
PUSH_CRON=0 9 * * *

# 应用配置
DEBUG=false
APP_BASE_URL=https://your-domain.com
# 允许匿名交互（收藏/点赞/反馈），适用于本地开发测试
ALLOW_ANONYMOUS_INTERACTION=false

# ============================================
# Bot-Pilot 机器人服务配置
# ============================================

# OpenAI 配置
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# 机器人名称
BOT_NAME=AI导航小助手

# ============================================
# Docker 端口配置（可选）
# ============================================
FRONTEND_PORT=3008
BACKEND_PORT=8000
BOT_PORT=8001

# 前端构建配置（可选）
VITE_VCONSOLE=false
VITE_ALLOW_ANONYMOUS=false
